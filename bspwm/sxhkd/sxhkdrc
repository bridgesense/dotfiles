# yadr compatible hotkeys

# For screenshots
super + control + s
    flameshot config
super + shift + s
    flameshot gui

# #---Software Bindings---# #
super + Return
    urxvt256c
super + space
    rofi -combi-modi window,drun,ssh -modi combi -show combi -monitor -1
super + d
    nemo --no-desktop
super + i 
    urxvt256c -e htop 
super + m
    ~/.config/scripts/toggle-movie-mode.sh
super + n
    urxvt256c -e ranger
super + r
    ~/.config/scripts/bspwm_screen_reset.sh
super + Escape
    setxkbmap -option caps:swapescape
super + shift + Escape
	pkill -USR1 -x sxhkd; \
	notify-send "sxhkd config reloaded"

# #---System Bindings---# #
super + shift + r
    ~/.config/scripts/reboot.sh
super + shift + x
    ~/.config/scripts/shutdown.sh

# #---Window Bindings---# #
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + p
    bspc node -t floating
super + t
    bspc node -t tiled
super + control + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + q
    bspc node -c
super + f
    bspc node -t fullscreen
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + {bracketleft,minus,equals,bracketright}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# #---Screen Bindings---# #
super + w
    bspc monitor -f next 
super + period
    bspc desktop -m next --follow; \
    bspc monitor focused -o I II III IV V VI VII VIII IX X
super + slash
    bspc node -m next --follow

# #---Workspace Bindings---# #
super + {z,x}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on
super + Tab
    bspc node -f last

# switch/move to workspace
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '{I,II,III,IV,V,VI,VII,VIII,IX,X}' --follow

# #---Function Buttons---# #
super + F1
    urxvt256c -e alsamixer -c 0
super + F2
    urxvt256c -e alsamixer -c 0
super + F3
    urxvt256c -e alsamixer -c 0
super + F4
    urxvt256c -e alsamixer -c 0
super + F5
    systemctl suspend && xautolock -locknow 
super + F6
    systemctl suspend && xautolock -locknow 
super + F7
    urxvt256c -e nmtui
super + F8
    urxvt256c -e nmtui
super + F9
    xautolock -locknow
super + F10
    arandr
super + F11
    ~/.config/scripts/toggle-touchpad.sh
super + F12
    ~/.config/scripts/toggle-touchpad.sh
    
# #---Arrow Keys---# #
super + {_,shift + }{left,down,up,right}
	bspc node -{f,s} {west,south,north,east}

# #---Extra XF86 Keys---# #
# These are the extra media keys that some keyboards have.
XF86AudioMicMute
    amixer set Capture toggle
XF86AudioMute
    pactl set-sink-mute 0 toggle
XF86AudioLowerVolume
    amixer set Master 2%-
Shift+XF86AudioLowerVolume
    amixer set Master 10%-
Control+XF86AudioLowerVolume
    amixer set Master 1%-
XF86AudioRaiseVolume
    amixer set Master 2%+
Shift+XF86AudioRaiseVolume
    amixer set Master 10%+
Control+XF86AudioRaiseVolume
    amixer set Master 1%+
XF86PowerOff
    ~/.config/scripts/shutdown.sh
XF86Calculator
    urxvt256c -e R -q --no-save
## XF86Sleep
# This binding is typically mapped by systemd automatically.
XF86Explorer
    urxvt256c -e ranger
XF86ScreenSaver
    lockscreen
XF86MyComputer
    urxvt256c -e ranger
XF86Eject
    dmenuumount
XF86Reload
    restart
XF86Suspend
    systemctl suspend && xautolock -locknow
XF86Display
    arandr
XF86Documents
    urxvt256c -e ranger ~/Documents
XF86WLAN
    systemctl suspend && xautolock -locknow 
XF86MonBrightnessDown
    xbacklight -dec 10
XF86MonBrightnessUp
    xbacklight -inc 10

[module/public-ip]
type = custom/script
exec = curl --silent https://api6.ipify.org
exec-if = 
tail = false
interval = 3600 

format = <label>
format-padding = 0

label = %output%                  
label-foreground = ${colors.darkyellow}
    
[module/date]
type = internal/date
interval = 60

date = "%a %b %d, %Y"
time = "%H:%M"

# If you're not living in a country where AM and PM is used you can add -alt to the time above this line 
# and comment it using ;, then you can remove the -alt to the time under this line and uncomment it.
;time-alt = " at %H:%M"
;time-alt = %H:%M:%S
;time-alt = %H:%M:%S

format = <label>
format-foreground = ${colors.foreground}

label = %date% %time%

[module/volume]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_12_00.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <ramp-volume> <label-volume>

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
;   %decibels% (unreleased)
;label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
;   %decibels% (unreleased)
label-muted = üîá muted
label-muted-foreground =  ${colors.red}

; Only applies if <ramp-volume> is used
ramp-volume-0 = üîà
ramp-volume-1 = ÔÄß
ramp-volume-2 = ÔÄ®

; Right and Middle click (unreleased)
click-right = pavucontrol &
; click-middle =

[module/battery]

foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.background}

border-size = 
border-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1
module-margin-bottom = 1

font-0 = Termsyn:size=9:style=Regular;1
font-1 = FontAwesome:scale=10:style=Regular;2
font-2 = Symbola:scale=10:style=Regular;2

modules-left = bspwm xwindow
modules-right = volume backlight cpu temperature filesystem memory eth wlan public-ip battery date poweroff
tray-position = right
tray-detatched = false
tray-padding = 2 


[module/poweroff]
type = custom/menu

expand-right = true
format = <label-toggle> <menu>
format-padding = 2
format-foreground = ${colors.red}

menu-0-0 = Shutdown
menu-0-0-exec = ~/.config/scripts/shutdown.sh
menu-0-1 = Restart
menu-0-1-exec = ~/.config/scripts/reboot.sh

label-open = ‚èª 
label-open-foreground = ${colors.darkyellow}
label-close = ‚èª    
label-close-foreground = ${colors.red}

label-separator = "|"
